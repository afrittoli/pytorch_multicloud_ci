\definecolor{myblue}{RGB}{114,194,173}        % Teal from image
\definecolor{myteal}{RGB}{153,219,202}        % Light teal from image
\definecolor{mygray}{RGB}{143,167,158}        % Gray-green from image
\definecolor{titlegray}{RGB}{66,130,94}       % Medium green from image
\definecolor{mylightgray}{RGB}{208,238,230}   % Light mint from image (most dominant)
\definecolor{mydarkblue}{RGB}{66,130,94}      % Medium green
\definecolor{mydarkteal}{RGB}{70,122,106}     % Deep teal-green from image
\definecolor{tektonblue}{RGB}{108,166,87}     % Olive green from image
\definecolor{tektonred}{RGB}{171,206,93}      % Yellow-green from image
\definecolor{tektonlilac}{RGB}{175,206,102}   % Light olive from image
\definecolor{myfinalblue}{RGB}{25,48,37}      % Darkest green from image
\definecolor{custom1}{RGB}{66,130,94}         % Medium green
\definecolor{custom2}{RGB}{114,194,173}       % Teal
\definecolor{custom3}{RGB}{171,206,93}        % Yellow-green
\definecolor{customdark}{RGB}{25,48,37}       % Dark forest green
\definecolor{titlegreen}{RGB}{25,48,37}       % Dark forest green for title

% Colors
% Title slide
\setbeamercolor*{title page header}{fg=titlegreen}
\setbeamercolor*{author}{fg=titlegreen}
\setbeamercolor*{date}{fg=titlegreen}

% Regular slide
\setbeamercolor*{footline}{fg=myblack}
\setbeamercolor*{background canvas}{bg=mylightgray}
\setbeamercolor*{frametitle}{fg=titlegray}
\setbeamercolor*{itemize item}{fg=myblack}
\setbeamercolor*{normal text}{fg=myblack}

% License text on images
\setbeamercolor{photolicense}{fg=white}
\setbeamerfont{photolicense}{size=\fontsize{6}{6}\selectfont}

% Large central slide
\setbeamerfont{largecentral}{size=\fontsize{34}{34}\selectfont}

% TOC
\setbeamerfont{section in toc}{size=\fontsize{16}{18}\selectfont}

% Author slide
\setbeamerfont{largeauthor}{size=\fontsize{34}{34}\selectfont}
\setbeamerfont{smallauthor}{size=\fontsize{8}{8}\selectfont}
\setbeamercolor*{largeauthor}{fg=white}
\setbeamercolor*{smallauthor}{fg=white}

% Hyperlinks colours
\hypersetup{colorlinks,linkcolor=white,urlcolor=white}

% Fonts
\setsansfont{IBMPlexSans}
\setmonofont{IBMPlexMono}
\setbeamerfont{title}{size=\fontsize{26}{26}\selectfont}
\setbeamerfont{title}{family=\fontspec{IBMPlexSans}}
\setbeamerfont{section name}{size=\fontsize{20}{20}\selectfont}
\setbeamerfont{author}{size=\fontsize{8}{8}\selectfont}
\setbeamerfont{caption}{size=\scriptsize}

\newcommand{\settextcolour}[1]{
    \setbeamercolor*{normal text}{fg=#1}
    \setbeamercolor*{itemize item}{fg=#1}
    \setbeamercolor*{item}{fg=#1}
    \setbeamercolor*{subitem}{fg=#1}
    \setbeamercolor*{block body}{fg=#1}
    \usebeamercolor[fg]{normal text}
}

\mode
<all>
